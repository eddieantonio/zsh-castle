# Jekyll post generation
function post-jekyll {
   if [ -z "$1" ]; then
     echo "Usage: provide a title argument."
     exit -1
   else
     title="$@"
   fi

   d=$(date +"%Y-%m-%d")
   D="$d $(date +"%H:%M:%S")"

   slug=$(echo $title | tr '[:upper:]' '[:lower:]' | tr '[:space:]' '-')
   slug="${slug:0:${#slug}-1}"
   post="./_posts/$d-$slug.md"

   body=""
   read -d '' body <<EOF
---
title:  $title
---

EOF

   echo "$body" > $post
   $EDITOR $post
}

